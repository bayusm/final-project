<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cool_grey_11"
    android:orientation="vertical"
    tools:context=".PostListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/transparent">

        <ImageButton
            android:id="@+id/action_btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:src="@drawable/ic_back" />

        <EditText
            android:id="@+id/et_search_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@+id/btn_search"
            android:layout_toEndOf="@id/action_btn_back"
            android:backgroundTint="@color/dark_white_2"
            android:hint="Cari Judul..."
            android:maxLines="1"
            android:textColor="@color/dark_white_2"
            android:textColorHint="@color/dark_white_2"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@+id/btn_filter"
            android:background="@color/transparent"
            android:src="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@+id/btn_previous_page"
            android:background="@color/transparent"
            android:src="@drawable/ic_filter" />

        <ImageButton
            android:id="@+id/btn_previous_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/btn_next_page"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_nav_page" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_next_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:scaleX="-1"
            android:src="@drawable/btn_nav_page" />

    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:reverseLayout="true"
            app:stackFromEnd="true"
            tools:listitem="@layout/item_post">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>